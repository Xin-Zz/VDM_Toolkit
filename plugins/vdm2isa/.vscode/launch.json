    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Java Program",
            "request": "launch",
            "mainClass": "plugins.GeneralisaPlugin",
            "projectName": "vdm2isa",
            // This starts the Java debug session inside ./src/test/resources
            // useful to avoid VDMJ Copying new versions of library files on workspace folder
            "cwd": "${workspaceFolder}${pathSeparator}src${pathSeparator}test${pathSeparator}resources"
        },
        {
            "name": "Debug Console",
            "type": "vdm",
            "request": "launch",
            "noDebug": false,
            "defaultName": "TestV2IFcns",
            // This starts the Java debug session inside ./src/test/resources
            // useful to avoid VDMJ Copying new versions of library files on workspace folder
            "cwd": "${workspaceFolder}${pathSeparator}src${pathSeparator}test${pathSeparator}resources"
        }
    ]
}