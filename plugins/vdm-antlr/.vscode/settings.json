{
    "java.configuration.updateBuildConfiguration": "automatic",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.tree.renderIndentGuides": "onHover",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/*.???~": true,
        "**/.pvscontext": true,
        "**/pvsbin": true,
        "**/*.jprf": true,
        "**/*.prf": true,
        "**/orphaned-proofs.prf": true,
        "**/*_adt.pvs": false,
        "**/*.log": true,
        "**/.vscode": true
    },
    "[pvs]": {
        "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}|;:'\",.<>/"
    }
}